generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// Auth.js models

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String

  // Stats tracking
  highScore       Int @default(0)
  totalGames      Int @default(0)
  currentStreak   Int @default(0)
  longestStreak   Int @default(0)
  lastPlayedAt    DateTime?

  accounts Account[]
  sessions Session[]
  games    Game[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models

model Game {
  id           String    @id @default(cuid())
  userId       String
  mode         String
  status       String    @default("in_progress")
  totalScore   Int       @default(0)
  currentRound Int       @default(1)

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  rounds Round[]

  createdAt   DateTime  @default(now())
  completedAt DateTime?

  @@index([userId])
  @@index([status])
  @@index([totalScore])
  @@index([mode])
}

model Round {
  id          String    @id @default(cuid())
  gameId      String
  roundNumber Int

  actualLat Float
  actualLng Float
  imageId   String

  guessLat  Float?
  guessLng  Float?
  distance  Float?
  score     Int?
  guessedAt DateTime?
  timeSpent Int?

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([gameId, roundNumber])
  @@index([gameId])
}

model Location {
  id       String  @id @default(cuid())
  lat      Float
  lng      Float
  imageId  String
  country  String?
  region   String?
  provider String  @default("mapillary")
  verified Boolean @default(true)

  @@index([provider])
  @@index([region])
}
